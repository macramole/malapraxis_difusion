body {
    font-family: "Droid Serif", serif;
}

p {
    line-height: 1.5em;
}

header {
	color: #fff;
	position: fixed;
	/* background-color: #128584; */
	width: 95%;
	padding: 1em 0 0.5em;
	z-index: 100;
	box-sizing: border-box;
	left: 50%;
	transform: translateX(-50%);
	border-bottom: 1px solid white;

    #logo {
        float: left;
    }

    nav {
        float: right;

        ul {
            list-style: none;
            padding: 0;
            margin: 0;

            li {
                float: left;
                margin-left: 2.5em;
                line-height: 1.8em;

                a {
                    text-decoration: none;
                    color: inherit;

                    &:hover {
                        text-decoration: underline;
                    }
                }
            }
        }
    }
}

.section {
    background-image: url("../images/bg3.png");
}

#hola {
    text-align: center;
    background-color: #487ea5;


    iframe {
        width: 63%;
    }

    #logoUntref {
    	text-align: left;
    	/* padding-left: 1em; */
    	position: absolute;
    	bottom: 1em;
    	left: 50%;
    	transform: translateX(-50%);
    }
}

#info {
    padding: 2.5em 0;
    background-color: #48a58b;
    // background-image: url("../images/bg1.png");
    color: white;

    .wrapper {
        width: 80%;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;

        > div {
            text-align: center;
            width: 30%;

            h2 {
            }
        }
    }
}

#imgs {
    background-color: #a56c48;
    // background-color: #dd5050;

    .fp-tableCell {
        vertical-align: top;
    }

    .wrapper {
        .sizer {
            width: 10%;
            height: 100px;
        }

        img {
        	width: 10%;
          opacity: 0.5;

            &.grande {
                width: 40%;
                opacity: 1;
                outline: 1px solid black;
                z-index: 10000;
                // position: absolute;
                // float: none;
            }
            &.cita {
                width: 30%;
                opacity: 1;
                // position: absolute;
                // float: none;
            }
        }
    }
}

#integrant {
    background-color: #8a8947;
    // background-color: #ff963d;
    // background-color: #dd5050;

    color: white;
    text-align: center;

    .wrapper {
        width: 80%;
        margin: 6em auto;
        // font-size: 1.2em;

        strong {
            display: block;
            margin-bottom: 0.7em;
            font-size: 1.2em;
        }

        ul {
            padding: 0;
            margin: 0;
            list-style: none;

            li {
                margin-bottom: 2em;

                ul li {
                    margin-bottom: 0.3em;
                }
            }
        }
    }
}
