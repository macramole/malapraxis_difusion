body {
    font-family: "Droid Serif", serif;

    &.init {
        overflow: hidden;
    }
}

p {
    line-height: 1.5em;
}

header {
	color: #fff;
	position: fixed;
	/* background-color: #128584; */
	width: 95%;
	padding: 1em 0 0.5em;
	z-index: 100;
	box-sizing: border-box;
	left: 50%;
	transform: translateX(-50%);
	border-bottom: 1px solid white;

    #logo {
        float: left;
    }

    nav {
        float: right;

        ul {
            list-style: none;
            padding: 0;
            margin: 0;

            li {
                float: left;
                margin-left: 2.5em;
                line-height: 1.8em;

                a {
                    text-decoration: none;
                    color: inherit;

                    &:hover {
                        text-decoration: underline;
                    }

                    &.active {
                        font-weight: bold;
                    }
                }
            }
        }
    }
}

.section {
    background-image: url("../images/bg3.png");
}

#overlayLoading {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 99999999;
    width: 100%;
    background-color: #487ea5;
    background-image: url("../images/bg3.png");

    height: 100%;
    transition: opacity 0.8s, visibility 0.8s;

    &.hide {
        opacity: 0;
        visibility: hidden;
    }

    .wrapper {
        width: 100%;
        text-align: center;
        position: relative;
        top: 50%;
        transform: translateY(-50%);
    }
}

#hola {
    text-align: center;
    background-color: #487ea5;


    iframe {
        width: 63%;
    }

    #logoUntref {
    	text-align: left;
    	/* padding-left: 1em; */
    	position: absolute;
    	bottom: 1em;
    	left: 50%;
    	transform: translateX(-50%);
    }
}

#info {
    padding: 2.5em 0;
    background-color: #48a58b;
    // background-image: url("../images/bg1.png");
    color: white;

    .wrapper {
        width: 80%;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;

        > div {
            text-align: center;
            width: 30%;

            h2 {
            }
        }
    }
}

#map {
    background-color: #dd5050;

    .wrapper {
        height: 100%;
    }

