#integrant {
    background-color: #8a8947;
    // background-color: #ff963d;
    // background-color: #dd5050;

    color: white;
    text-align: center;

    .wrapper {
        width: 80%;
        margin: 6em auto;
        // font-size: 1.2em;

        strong {
            display: block;
            margin-bottom: 0.7em;
            font-size: 1.2em;
        }

        > ul {
          padding-bottom: 2em !important;
          transition: background-color 0.8s;

          &:hover {
            background-color: rgba(0, 0, 0, 0.19);
          }

          li:last-child {
            margin-bottom: 0;
          }
        }

        ul {
            padding: 0;
            margin: 0;
            list-style: none;

            li {
                margin-bottom: 2em;



                ul li {
                    margin-bottom: 0.3em;
                }

                &.title {
                  font-weight: bold;
                  font-size: 1.3em;
                  text-shadow: 1px 1px black;
                  padding-top: 1.5em;
                  border-top: 1px solid #ffffff80;
                }

                .cargo {
                  font-size: 0.65em;
                  font-family: Arial;
                  margin: 0.2em 0em 1em 0;
                  font-style: italic;
                }
            }
        }
    }
}
